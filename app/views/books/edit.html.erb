<h2>Editing book</h2>
<%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <h4> </h4>
  <%= f.submit 'Update Book' %>

<% end %>

<%= link_to "Show", "/books/#{@book.id}" %>
<span>|</span>
<a href="http://localhost:3000/books">Back</a>
