<h1>Books</h1>
<table>
 <tr>
  <th>  title  </th>
  <th>  body  </th>
 </tr>
 <% @books.each do |book| %>
   <tr>
      <td>  <%= book.title %>  </td>
      <td>  <%= book.body %>  </td>
      <td>  <%= link_to "Show", "/books/#{book.id}" %></td>
      <td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
      <td><%= link_to "Delete", "/books/#{book.id}", method: :delete, "data-confirm" => "本当に削除しますか？"%></td>
   </tr>
 <% end %>
</table>


<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <h4> </h4>
  <%= f.submit 'Create Book' %>

  <% end %>
